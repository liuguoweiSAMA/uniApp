.number {
  width: 100%;
  padding: 30rpx;
}
.number .numberMess {
    background: #F8F8F8;
    border-radius: 4px;
    width: 100%;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
            flex-direction: column;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    font-size: 28rpx;
    font-weight: 600;
    padding-top: 20rpx;
}
.number .numberMess input {
      border: 1px solid #E9E9E9;
      height: 80rpx;
      width: 610rpx;
      margin: 30rpx 0;
      border-radius: 4px;
      border-right: none;
}
.number .numberMess .codes {
      color: #FB007E;
      border: 1px solid #E9E9E9;
      text-align: center;
      border-left: none;
      width: 210rpx;
      height: 80rpx;
      margin-top: 30rpx;
      line-height: 80rpx;
}
.number .button {
    height: 96rpx;
    background: -webkit-linear-gradient(left, #ff007c 0%, #ff757e 100%);
    background: linear-gradient(90deg, #ff007c 0%, #ff757e 100%);
    border-radius: 24px;
    text-align: center;
    line-height: 96rpx;
    color: #FFFFFF;
    margin-top: 60rpx;
}

